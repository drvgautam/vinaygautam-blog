---
interface Props {
  clients?: string[];
  title?: string;
}

const { 
  clients = [
    "FAIR DMP Startup",
    "Industry Pilot",
    "Ommeg",
    "Coatings Knowledge Graph",
  ],
  title = "Trusted by Industry Leaders"
} = Astro.props;
---

<section class="clients-section">
  <div class="wrap">
    {title && (
      <h2 class="clients-title">{title}</h2>
    )}
    <div class="clients-grid">
      {clients.map((client) => (
        <div class="client-logo" title={client}>
          {client}
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .clients-section {
    padding: 3rem 0;
    background-color: var(--bg-alt);
  }

  .clients-title {
    text-align: center;
    font-size: 1.5rem;
    margin-bottom: 2rem;
    color: var(--text-main);
  }

  .clients-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 2rem;
    align-items: center;
    justify-items: center;
  }

  .client-logo {
    padding: 1.5rem;
    background-color: var(--bg-card);
    border-radius: var(--radius-xl);
    border: 1px solid var(--border-subtle);
    text-align: center;
    font-weight: 500;
    color: var(--text-dim);
    transition: all 0.2s ease;
    width: 100%;
    max-width: 200px;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 100px;
  }

  .client-logo:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0,0,0,0.3);
    border-color: var(--border-default);
    color: var(--text-main);
  }

  @media (max-width: 768px) {
    .clients-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }

    .client-logo {
      padding: 1rem;
      min-height: 80px;
      font-size: 0.9rem;
    }
  }
</style>
