---
import { getCollection } from "astro:content"
import PageLayout from "@layouts/PageLayout.astro"
import TopLayout from "@layouts/TopLayout.astro"
import BottomLayout from "@layouts/BottomLayout.astro"
import { WORK } from "@consts"

const collection = await getCollection("work")

collection.sort((a, b) => {
  // Transition section always first
  if (a.data.isTransition) return -1
  if (b.data.isTransition) return 1
  // Then sort by date (newest first)
  return new Date(b.data.dateStart).getTime() - new Date(a.data.dateStart).getTime()
})

const work = await Promise.all(
  collection.map(async (item) => {
    const { Content } = await item.render()
    return { ...item, Content }
  })
)

function formatDateRange(start: Date | string, end: Date | string) {
  const startYear = typeof start === "string" ? start : new Date(start).getFullYear()
  const endYear = typeof end === "string" ? end : new Date(end).getFullYear()
  return `${startYear} â€” ${endYear}`
}
---

<PageLayout title={WORK.TITLE} description={WORK.DESCRIPTION}>
  <TopLayout>
    <div class="animate page-heading">
      {WORK.TITLE}
    </div>
  </TopLayout>
  <BottomLayout>
    <ul>
      { 
        work.map((entry) => {
          const isTransition = entry.data.isTransition || false
          const dateRange = formatDateRange(entry.data.dateStart, entry.data.dateEnd)
          
          return (
            <li class={`animate border-b border-black/10 dark:border-white/25 mt-4 py-8 first-of-type:mt-0 first-of-type:pt-0 last-of-type:border-none ${isTransition ? 'bg-gray-50 dark:bg-gray-900/50 rounded-lg px-6 -mx-6 mb-6' : ''}`}>
              {isTransition ? (
                <div class="text-black dark:text-white font-bold text-xl mb-2">
                  {entry.data.role}
                </div>
              ) : (
                <div class="text-black dark:text-white font-semibold text-lg mb-1">
                  {entry.data.role}
                </div>
              )}
              <div class="text-base text-gray-700 dark:text-gray-300 mb-2">
                {entry.data.company}
              </div>
              <div class="text-xs uppercase tracking-wide text-gray-500 dark:text-gray-400 mb-4">
                {dateRange}
              </div>
              <article class="prose dark:prose-invert max-w-none">
                <entry.Content />
              </article>
            </li>
          )
        })
      }
    </ul>
    
    <!-- Skills Section -->
    <div class="animate mt-12 pt-8 border-t border-black/10 dark:border-white/25">
      <h2 class="text-2xl font-bold text-black dark:text-white mb-6">Skills & Tools</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <h3 class="font-semibold text-lg text-black dark:text-white mb-2">DevOps / Cloud</h3>
          <p class="text-gray-700 dark:text-gray-300">Kubernetes, Docker, Linux, CI/CD, GitHub Actions, gitOps, Ansible, Prometheus, Grafana, Helm, etc.</p>
        </div>
        <div>
          <h3 class="font-semibold text-lg text-black dark:text-white mb-2">Programming</h3>
          <p class="text-gray-700 dark:text-gray-300">Python, TypeScript, Bash, FastAPI, Node.js</p>
        </div>
        <div>
          <h3 class="font-semibold text-lg text-black dark:text-white mb-2">Data & Graph</h3>
          <p class="text-gray-700 dark:text-gray-300">Neo4j, PostgreSQL, RDF, SPARQL, R2RML, ETL pipelines</p>
        </div>
        <div>
          <h3 class="font-semibold text-lg text-black dark:text-white mb-2">AI & LLMs</h3>
          <p class="text-gray-700 dark:text-gray-300"> semantic data engineering: Ontology and Knowledge graph engineering, GenAI tooling: LLMs, retrival-augmented generation (RAG) and graphRAG, Agentic AI</p>
        </div>
        <div>
          <h3 class="font-semibold text-lg text-black dark:text-white mb-2">Other</h3>
          <p class="text-gray-700 dark:text-gray-300">Self-hosting, Automation, Homelab</p>
        </div>
      </div>
    </div>
  </BottomLayout>
</PageLayout>
